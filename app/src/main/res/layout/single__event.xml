<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_marginBottom="20dp"

    >


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/CardViewImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@mipmap/add_btn"
                android:adjustViewBounds="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/CardViewImage"
                android:layout_alignParentStart="true"
                tools:ignore="MissingPrefix">

                <TextView
                    android:id="@+id/CardViewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EventTitle"
                    android:padding="15dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="normal|bold"
                    fontPath="fonts/Steinerlight.ttf"

                    android:background="@color/pureWhite"
                    android:textSize="20sp"/>

                <TextView
               android:id="@+id/CardViewDescription"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="EventDescription"
               android:paddingEnd="10dp"
               android:paddingLeft="30dp"
               android:paddingRight="15dp"
               android:paddingTop="10dp"
               android:paddingBottom="4dp"
               fontPath="fonts/Steinerlight.ttf"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/side_bar"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="10dp"

                android:layout_alignParentEnd="true"
                android:paddingTop="10dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/smallAvatar"
                    android:src="@drawable/profile24"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_width="1dp"
                    app:civ_shadow="false"
                    app:civ_shadow_radius="30"
                    app:civ_shadow_color="@color/colorAccent"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"
                    android:adjustViewBounds="false"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/CardInfo"
                    android:src="@drawable/info24"
                    app:civ_border_color="@color/transparentColor"
                    app:civ_border_width="0dp"
                    app:civ_shadow="false"
                    app:civ_shadow_radius="30"
                    app:civ_shadow_color="@color/transparentColor"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"
                    android:adjustViewBounds="false"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"/>

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/CardLike"
                    android:src="@drawable/thumb24"
                    app:civ_border_color="@color/transparentColor"
                    app:civ_border_width="2dp"
                    app:civ_shadow="false"
                    app:civ_shadow_radius="30"
                    app:civ_shadow_color="@color/transparentColor"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"
                    android:adjustViewBounds="false"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</android.support.v7.widget.CardView>