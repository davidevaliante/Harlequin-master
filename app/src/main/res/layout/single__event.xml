<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    tools:ignore="MissingPrefix"

                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="16dp"

                                    android:elevation="12dp"
                                    app:cardCornerRadius="6dp"
    >


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/CardViewImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:adjustViewBounds="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/smallAvatar"

                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_width="1dp"
                    app:civ_shadow="false"
                    app:civ_shadow_radius="30"
                    app:civ_shadow_color="@color/colorAccent"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"
                    android:adjustViewBounds="false"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="start|bottom"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/CardViewImage"
                android:layout_alignParentStart="true"
                tools:ignore="MissingPrefix"
                android:background="@color/pureWhite"
                android:id="@+id/infoBox">

                <TextView
                    android:id="@+id/CardViewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EventTitle"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="normal|bold"
                    fontPath="fonts/Hero.otf"
                    android:background="@color/pureWhite"
                    android:textSize="22sp"
                    android:layout_marginLeft="6dp"
                    android:padding="2dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/pureBlack"/>

                <LinearLayout

                    android:padding="4dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/line_hack_top_bottom_purple"
                    android:id="@+id/date_time_layout">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/vector_calendar16"
                        android:id="@+id/imageView2"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:textColor="@color/pureBlack"
                        android:text="date "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardDay"
                        android:layout_weight="1"
                        fontPath="fonts/Hero_Light.otf"
                        android:padding="2dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/vector_clock16"
                        android:id="@+id/imageView"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="6dp"/>

                    <TextView
                        android:textColor="@color/pureBlack"
                        android:text="time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardTime"
                        android:layout_weight="1"
                        fontPath="fonts/Hero_Light.otf"
                        android:padding="2dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:padding="6dp"
                        android:background="@color/transparentColor"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/vector_empty_star24"
                        android:id="@+id/CardLike"
                        android:layout_gravity="bottom"
                         android:layout_weight="0.5"
                        android:scaleType="centerInside"/>


                    <TextView

                        android:textColor="@color/pureBlack"
                        android:text="likes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/cardLikeCounter"

                        android:textStyle="normal|bold"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_gravity="end|bottom"
                        fontPath="fonts/Hero_Light.otf"
                        android:layout_weight="0.5"
                        android:layout_marginTop="0dp"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>
</android.support.v7.widget.CardView>