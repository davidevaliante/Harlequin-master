<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.finder.harlequinapp.valiante.harlequin.CreateEvent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        >

        <ImageButton
            android:layout_width="match_parent"
            android:id="@+id/eventImage"
            android:cropToPadding="false"
            android:layout_height="250dp"
            android:padding="15dp"
            android:background="@color/transparentColor"
            android:src="@mipmap/add_btn"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/eventImage"
            android:layout_alignParentStart="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/eName"
                android:hint="Inserisci il nome dell'evento"
                android:background="@drawable/input_outline"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/eventImage"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:textAppearance="@android:style/TextAppearance.Material"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Creato da :"
                android:ems="10"
                android:id="@+id/cName"
                android:background="@drawable/input_outline"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/eName"
                android:layout_alignEnd="@+id/eName"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:hint="Creato da..."
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/eDescription"
                android:hint="Aggiungi una descrizione dell'evento"
                android:background="@drawable/input_outline"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/cName"
                android:layout_alignStart="@+id/cName"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:padding="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/eventDate"
                android:layout_weight="1"
                android:background="@drawable/input_outline"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:inputType="text"
                android:focusable="false"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/eventTime"
                android:layout_weight="1"
                android:background="@drawable/input_outline"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:focusable="false"/>

            <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submitButton"

                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:layout_marginTop="30dp"
                />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
