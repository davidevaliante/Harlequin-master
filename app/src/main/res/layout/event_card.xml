<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="@color/transparentColor"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="12dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@drawable/rounded_shape"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.design.widget.FloatingActionButton
        app:fabSize="normal"
        app:elevation="18dp"
        app:pressedTranslationZ="12dp"
        app:srcCompat="@drawable/white_star_empty_24"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/fabLike"
        app:backgroundTint="@color/colorAccent"
        android:layout_marginEnd="90dp"
        app:layout_anchor="@+id/CardViewImage"
        app:layout_anchorGravity="bottom|right|end"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        
        <ImageView
            android:id="@+id/CardViewImage"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="centerCrop"/>

        <com.truizlop.fabreveallayout.FABRevealLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CardViewImage"
            android:id="@+id/fab_reveal">

            <android.support.design.widget.FloatingActionButton


                app:fabSize="normal"
                app:elevation="18dp"
                app:pressedTranslationZ="12dp"
                app:srcCompat="@drawable/info_white_24"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/cardReveal"
                app:backgroundTint="@color/colorPrimary"
                android:layout_marginEnd="70dp"

            />

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@color/pureWhite"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/primary_layout">
                <TextView
                    android:gravity="bottom"
                    android:id="@+id/cardDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="data"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="normal|bold"
                    fontPath="fonts/Hero.otf"
                    android:background="@color/pureWhite"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:textColor="@color/light_grey"
                    tools:ignore="MissingPrefix"/>

                <LinearLayout

                    android:layout_below="@+id/cardDay"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:id="@+id/date_time_layout">



                    <TextView

                        android:textStyle="bold"
                        android:text="Nome evento"
                        android:textSize="22sp"
                        android:textColor="@color/dark_grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/CardViewTitle"
                        android:layout_weight="1"
                        fontPath="fonts/Hero.otf"
                        tools:ignore="MissingPrefix"
                        android:paddingStart="6dp"/>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginEnd="42dp"
                            android:drawableStart="@drawable/matte_blue_clock_14"
                            android:drawablePadding="10dp"
                            android:gravity="center"
                            android:textColor="@color/matte_blue"
                            android:text="time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cardTime"
                            android:layout_weight="1"
                            fontPath="fonts/Hero.otf"
                            android:padding="2dp"
                            tools:ignore="MissingPrefix"
                            android:layout_gravity="center_horizontal|center_vertical"/>
                        <TextView
                            android:drawableStart="@drawable/matte_blue_ticket_14"
                            android:drawablePadding="10dp"
                            android:gravity="center"
                            android:textColor="@color/matte_blue"
                            android:text="Ingresso :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cardPrice"
                            android:layout_weight="1"
                            fontPath="fonts/Hero.otf"
                            android:padding="2dp"
                            tools:ignore="MissingPrefix"
                            android:layout_gravity="center_horizontal|center_vertical"/>
                    </LinearLayout>

                    <TextView
                        android:drawablePadding="5dp"
                        android:drawableStart="@drawable/pin_purple_14"
                        android:layout_gravity="center"
                        android:gravity="center|bottom"
                        android:textColor="@color/colorPrimary"
                        fontPath="fonts/Hero.otf"
                        android:text="Bunker Club"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/place_name"
                        tools:ignore="MissingPrefix"
                        android:padding="6dp"
                        android:paddingTop="6dp"/>


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          xmlns:tools="http://schemas.android.com/tools"
                          android:layout_width="match_parent"
                          android:layout_height="150dp"
                          android:orientation="vertical"
                          xmlns:app="http://schemas.android.com/apk/res-auto"
                          android:background="@color/transparentColor"
                          tools:ignore="MissingPrefix"
                          android:padding="6dp"
                          android:id="@+id/secondary_layout">


                <TextView
                    android:gravity="center_vertical"
                    fontPath="fonts/Hero.otf"
                    android:drawableStart="@drawable/group_of_users_white_16"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:layout_alignParentStart="true"
                    android:textSize="14sp"
                    android:textColor="@color/pureWhite"
                    android:id="@+id/partecipanti"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

                <TextView
                    android:gravity="center_vertical"
                    fontPath="fonts/Hero.otf"
                    android:drawableStart="@drawable/age_white_16"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:layout_below="@+id/partecipanti"
                    android:layout_alignParentStart="true"
                    android:textSize="14sp"
                    android:textColor="@color/pureWhite"
                    android:id="@+id/eta_media"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="center_vertical"
                        fontPath="fonts/Hero.otf"
                        android:drawableStart="@drawable/female_white_16"
                        android:drawablePadding="10dp"
                        android:layout_weight="1"

                        android:padding="4dp"
                        android:layout_below="@id/eta_media"
                        android:layout_alignParentStart="true"
                        android:textSize="14sp"
                        android:textColor="@color/pureWhite"
                        android:id="@+id/female_sex_distribution"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:gravity="center_vertical"
                        android:padding="4dp"
                        android:textSize="14sp"
                        android:textColor="@color/pureWhite"
                        fontPath="fonts/Hero.otf"
                        android:id="@+id/male_sex_distribution"
                        android:drawableStart="@drawable/male_white_16"
                        android:drawablePadding="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <Button
                    android:padding="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorAccent"
                    android:background="@color/transparentColor"
                    android:text="CHIUDI"
                    android:id="@+id/closeInfo"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center|bottom"
                    />
            </LinearLayout>


        </com.truizlop.fabreveallayout.FABRevealLayout>


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
    </android.support.v7.widget.CardView>