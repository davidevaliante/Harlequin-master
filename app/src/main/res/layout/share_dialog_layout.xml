<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/shareDialogHeader"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/matte_blue"
        android:padding="8dp"
        android:text="Condividi con "
        android:textColor="@color/pureWhite"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/shareWithFacebook"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/shareDialogHeader"
        android:background="@color/pureWhite">

        <ImageView
            android:id="@+id/facebook_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            app:srcCompat="@drawable/facebook_round_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/facebook_icon"
            android:padding="8dp"
            android:text="Facebook" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/main_gradient" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shareWithWhatsapp"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/shareWithFacebook"
        android:background="@color/pureWhite">

        <ImageView
            android:id="@+id/whatsapp_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            app:srcCompat="@drawable/whatsapp_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/whatsapp_icon"
            android:padding="8dp"
            android:text="WhatsApp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/main_gradient" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shareWithTelegram"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/shareWithWhatsapp"
        android:background="@color/pureWhite">

        <ImageView
            android:id="@+id/telegram_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            app:srcCompat="@drawable/telegram_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/telegram_icon"
            android:padding="8dp"
            android:text="Telegram" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/main_gradient" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/share_copy"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/shareWithTelegram"
        android:background="@color/pureWhite">

        <ImageView
            android:id="@+id/copy_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            app:srcCompat="@drawable/copy_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/copy_icon"
            android:padding="8dp"
            android:text="Copia Link" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/main_gradient" />


    </RelativeLayout>

</RelativeLayout>