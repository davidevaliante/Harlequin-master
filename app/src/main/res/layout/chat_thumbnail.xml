<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_marginBottom="20dp"
                                    tools:ignore="MissingPrefix"

    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Chat privata con :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ctChatName"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            fontPath="fonts/Sansation_Light.ttf"
            android:padding="4dp"
            android:layout_marginLeft="6dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/smallChatAvatar"

                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="2dp"
                app:civ_shadow="false"
                app:civ_shadow_radius="30"
                app:civ_shadow_color="@color/colorAccent"
                android:scaleType="centerCrop"
                android:cropToPadding="true"
                android:adjustViewBounds="false"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="6dp"/>

            <TextView
                android:text="Nome Mittente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ctNomeUtente"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="22dp"
                fontPath="fonts/Sansation_Light.ttf"/>


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>