<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="@color/transparentColor"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="12dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.design.widget.CoordinatorLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/rounded_shape"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools">

        <android.support.design.widget.FloatingActionButton
            app:fabSize="normal"
            app:elevation="18dp"
            app:pressedTranslationZ="12dp"
            app:srcCompat="@drawable/white_star_empty_24"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/fabLike"
            app:backgroundTint="@color/colorAccent"
            android:layout_marginEnd="16dp"
            app:layout_anchor="@+id/CardViewImage"
            app:layout_anchorGravity="bottom|right|end"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginStart="6dp"
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/first_user"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border="true"
                    app:civ_border_width="1dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/second_user"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border="true"
                    app:civ_border_width="1dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/third_user"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border="true"
                    app:civ_border_width="1dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>


            </LinearLayout>

            <ImageView
                android:id="@+id/CardViewImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"/>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@color/pureWhite"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_below="@+id/CardViewImage"
                            android:orientation="vertical">
                <TextView
                    android:id="@+id/cardDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="data"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="normal|bold"
                    fontPath="fonts/Hero.otf"
                    android:background="@color/pureWhite"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:textColor="@color/light_grey"
                    tools:ignore="MissingPrefix"/>

                <TextView
                    android:textStyle="bold"
                    android:text="Nome evento"
                    android:textSize="22sp"
                    android:textColor="@color/dark_grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/CardViewTitle"
                    android:layout_weight="1"
                    fontPath="fonts/Hero.otf"
                    android:padding="6dp"
                    android:layout_gravity="center_vertical"
                    tools:ignore="MissingPrefix"/>

                <TextView
                    android:gravity="center|bottom"
                    android:padding="6dp"
                    android:textColor="@color/colorPrimary"
                    fontPath="fonts/Hero.otf"
                    android:text="Nome Locale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/place_name"
                    android:layout_weight="1"
                    tools:ignore="MissingPrefix"/>

                <TextView
                    android:gravity="center"
                    android:textColor="@color/matte_blue"
                    android:text="time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardTime"
                    android:layout_weight="1"
                    fontPath="fonts/Hero_Light.otf"
                    android:padding="2dp"
                    tools:ignore="MissingPrefix"
                    android:layout_gravity="center_horizontal|center_vertical"/>

            </LinearLayout>

        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</android.support.v7.widget.CardView>