<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    app:cardBackgroundColor="@color/transparentColor"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/round_corner_transparent"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/thumb_avatar"
            android:layout_width="120dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:background="@color/pureWhite"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_layout">
        <TextView
            fontPath="fonts/Ubuntu_LightItalic.ttf"

            android:paddingStart="12dp"
            android:textColor="@color/matte_blue"
            android:id="@+id/citta"
            android:paddingTop="6dp"
            android:layout_toEndOf="@+id/thumb_avatar"
            android:text="city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingPrefix"/>
       <TextView
           fontPath="fonts/Ubuntu_Medium.ttf"

           android:paddingStart="12dp"
           android:textColor="@color/dark_grey"
           android:layout_below="@+id/citta"
           android:paddingBottom="6dp"
           android:id="@+id/nomeutente"
           android:textSize="18sp"
           android:layout_toEndOf="@+id/thumb_avatar"
           android:text="Nome Utente"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           tools:ignore="MissingPrefix"/>
        <TextView
            android:paddingStart="12dp"
            android:textSize="12sp"
            android:id="@+id/relazione"
            android:paddingTop="6dp"
            android:layout_below="@+id/nomeutente"
            android:layout_toEndOf="@+id/thumb_avatar"
            android:text="relationship status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/colorPrimaryLight"
            android:paddingStart="12dp"
            android:textSize="12sp"
            android:id="@+id/joinerage"
            android:paddingBottom="6dp"
            android:layout_below="@+id/relazione"

            android:text="age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </LinearLayout>


        <ImageView
            android:scaleType="centerInside"
            android:id="@+id/sexindicator"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="end">

        <ImageView

            android:layout_marginStart="120dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/main_underline"/>


    </LinearLayout>

</android.support.v7.widget.CardView>