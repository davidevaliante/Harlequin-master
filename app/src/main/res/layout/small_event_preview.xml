<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    tools:ignore="MissingPrefix"
                                    android:elevation="12dp"
                                    android:background="@color/transparentColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/sCardEventAvatar"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="2dp"
            app:civ_shadow="false"
            app:civ_shadow_radius="30"
            app:civ_shadow_color="@color/colorAccent"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:adjustViewBounds="false"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="6dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparentColor"
            android:backgroundTint="@color/transparentColor"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="27dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/sCardEventAvatar">

            <TextView
                android:text="Nome Evento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sCardEventName"
                android:textSize="20sp"
                fontPath="fonts/Sansation_Bold.ttf"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textStyle="normal|bold"/>

            <TextView
                android:text="Data Evento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sCardEventDate"
                fontPath="fonts/Sansation_Light.ttf"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:text="time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sCardEventTime"
                android:textSize="8sp"
                android:layout_marginLeft="6dp"
                android:layout_gravity="end|bottom"
                fontPath="fonts/Sansation_Light.ttf"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_alignTop="@+id/sCardEventAvatar"
            android:layout_alignParentEnd="true"
            android:id="@+id/likeLayout"
            android:layout_marginRight="8dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/empty_star32"
                android:id="@+id/sFavouriteButton"
                android:layout_gravity="end|bottom"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@color/transparentColor"
                android:padding="12dp"/>

            <TextView
                android:text="likes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/smallLikeView"
                android:layout_gravity="end|bottom"
                fontPath="fonts/Sansation_Light.ttf"
                android:gravity="center"
                />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>