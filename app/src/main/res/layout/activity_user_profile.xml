<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.finder.harlequinapp.valiante.harlequin.UserProfile"
        >

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/profileTop"
        android:src="@drawable/profile_skyline"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/info24"
        android:id="@+id/button1"

        android:backgroundTint="@color/colorAccent"
        app:layout_anchor="@id/profileTop"
        app:layout_anchorGravity="start|bottom"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/info24"
        android:id="@+id/button2"


        app:layout_anchor="@id/profileTop"
        app:layout_anchorGravity="end|bottom"
        />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profileUserAvatar"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border="true"
        app:civ_border_width="4dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_anchor="@id/profileTop"
        app:layout_anchorGravity="bottom|center"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>

        <TextView
            android:text="Nome Utente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileUserName"
            android:textSize="24sp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
